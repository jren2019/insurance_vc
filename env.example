POSTGRES_PASSWORD=your_secure_postgres_password_here

# Flask Backend Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=production
DATABASE_URL=postgresql://oidc_user:your_secure_postgres_password_here@postgres:5432/oidc_db

# OIDC Configuration
ISSUER=https://insurance-vc-nz.australiaeast.cloudapp.azure.com
